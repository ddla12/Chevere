{
  "name": "chevere",
  "version": "1.0.0",
  "description": "A framework for javascript, created to make your DOM code easy to setup and maintain",
  "main": "index.js",
  "scripts": {
    "test": "jest -c ./jest.config.js",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "build": "tsc"
  },
  "_moduleAliases": {
    "@actions": "./src/js/actions/index.js",
    "@chevere": "./src/js/chevere/index.js",
    "@helpers": "./src/js/utils/index.js",
    "@interfaces": "./src/js/interfaces.js"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "parser": "typescript"
  },
  "author": "Darud Lingilien",
  "license": "MIT",
  "dependencies": {
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.15.4",
    "jest": "^27.2.3",
    "prettier": "^2.3.2",
    "terser-webpack-plugin": "^5.2.4",
    "ts-loader": "^9.2.4",
    "typescript": "^4.3.5",
    "webpack": "^5.46.0",
    "webpack-cli": "^4.7.2"
  }
}
