{
  "name": "chevere",
  "version": "1.0.0",
  "description": "A microframework for Javascript, based on DOM manipulation",
  "main": "index.js",
  "scripts": {
    "test": "jest -c ./jest.config.js",
    "format": "prettier --write \"src/**/*.{ts,js}\""
  },
  "_moduleAliases": {
    "@actions":"./src/actions/index.ts",
    "@chevere":"./src/chevere/index.ts",
    "@helpers":"./src/utils/index.ts",
    "@interfaces":"./src/interfaces.ts"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "parser": "typescript"
  },
  "author": "Darud Lingilien",
  "license": "MIT",
  "dependencies": {
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.4",
    "typescript": "^4.3.5",
    "webpack": "^5.46.0",
    "webpack-cli": "^4.7.2"
  }
}
